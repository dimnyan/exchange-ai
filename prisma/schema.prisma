generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // url      = env("POSTGRES_PRISMA_URL")
}

model symbols {
  id                 String   @default(uuid(4)) @unique
  name               String
  abbr               String
  url                String
  price              Float
  volume_24_hours    Float
  market_cap         Float
  circulating_supply Float
  max_supply         Float
  total_supply       Float
  date_taken         String
  created_at         DateTime
  updated_at         DateTime
}
